<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="775.0" stylesheets="@../../../Styles/Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.crud.HelloController">

    <VBox layoutX="20" layoutY="20" spacing="10">

        <HBox spacing="10">
            <TextField fx:id="txtId" promptText="ID" styleClass="label" />
            <TextField fx:id="txtNombre" promptText="Nombre de la película" styleClass="label" />
            <SplitMenuButton fx:id="generoMenu" text="Género" />
            <TextField fx:id="txtAno" promptText="Año" styleClass="label" />
        </HBox>

        <HBox spacing="10">
            <Button fx:id="btnAgregar" onAction="#agregarPelicula" text="Agregar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="btnModificar" onAction="#modificarPelicula" text="Modificar" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <Button fx:id="btnEliminar" onAction="#eliminarPelicula" text="Eliminar" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            <Button fx:id="btnVer" onAction="#cargarPeliculas" text="Ver" style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
            <!-- Botones agregados con color -->
            <Button fx:id="btnDesactivar" onAction="#desactivarPelicula" text="Desactivar" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
            <Button fx:id="btnReactivar" onAction="#reactivarPelicula" text="Reactivar" style="-fx-background-color: #009688; -fx-text-fill: white;"/>
        </HBox>

        <TableView fx:id="tablePeliculas" prefHeight="300" styleClass="column-header">
            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colNombre" text="Nombre" />
                <TableColumn fx:id="colGenero" text="Género" />
                <TableColumn fx:id="colAno" text="Año" />
                <TableColumn fx:id="colEstado" text="Estado" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
